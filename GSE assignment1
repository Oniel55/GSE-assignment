      "source": [
        "import os\n",
        "\n",
        "class DataSet:\n",
        "    def __init__(self, data_file, category_file):\n",
        "        self.data_file = data_file\n",
        "        self.category_file = category_file\n",
        "        self.numbers = []\n",
        "        self.unique_categories = set()\n",
        "        self.stats = {}\n",
        "\n",
        "    def load_data(self):\n",
        "        \"\"\"Tasks 1, 2, & 6: File Handling, Error Handling, and Sets\"\"\"\n",
        "        # Handle numerical data\n",
        "        if not os.path.exists(self.data_file):\n",
        "            print(f\"Error: {self.data_file} not found.\")\n",
        "            return False\n",
        "\n",
        "        try:\n",
        "            with open(self.data_file, 'r') as f:\n",
        "                # split() handles vertical data automatically\n",
        "                self.numbers = [float(x) for x in f.read().split() if x.strip()]\n",
        "\n",
        "            # Task 6: Extract unique values using a set\n",
        "            if os.path.exists(self.category_file):\n",
        "                with open(self.category_file, 'r') as f:\n",
        "                    self.unique_categories = {line.strip() for line in f if line.strip()}\n",
        "\n",
        "            return True\n",
        "        except ValueError:\n",
        "            print(\"Error: File contains invalid (non-numeric) values.\")\n",
        "            return False\n",
        "\n",
        "    def calculate_statistics(self, threshold=60):\n",
        "        \"\"\"Tasks 3, 4, & 5: Functions, Loops, and Conditionals\"\"\"\n",
        "        if not self.numbers:\n",
        "            return\n",
        "\n",
        "        # Task 4: Using a loop to traverse the dataset\n",
        "        total = 0.0\n",
        "        count = 0\n",
        "        minimum = self.numbers[0]\n",
        "        maximum = self.numbers[0]\n",
        "\n",
        "        for val in self.numbers:\n",
        "            total += val\n",
        "            count += 1\n",
        "            if val < minimum: minimum = val\n",
        "            if val > maximum: maximum = val\n",
        "\n",
        "        avg = total / count\n",
        "\n",
        "        # Task 5: Performance Threshold\n",
        "        performance = \"High Performance\" if avg > threshold else \"Needs Improvement\"\n",
        "\n",
        "        self.stats = {\n",
        "            \"Total\": total,\n",
        "            \"Average\": round(avg, 2),\n",
        "            \"Minimum\": minimum,\n",
        "            \"Maximum\": maximum,\n",
        "            \"Performance\": performance,\n",
        "            \"Unique Category Count\": len(self.unique_categories)\n",
        "        }\n",
        "\n",
        "    def display_results(self):\n",
        "        \"\"\"Task 7: Display results from the object\"\"\"\n",
        "        print(\"\\n--- Project Analysis Results ---\")\n",
        "        for key, value in self.stats.items():\n",
        "            print(f\"{key}: {value}\")\n",
        "        print(f\"Unique Categories Found: {self.unique_categories}\")\n",
        "\n",
        "    def save_report(self, report_file):\n",
        "        \"\"\"Task 8: Save statistics to a report file\"\"\"\n",
        "        with open(report_file, 'w') as f:\n",
        "            f.write(\"Dataset Management & Analysis Report\\n\")\n",
        "            f.write(\"====================================\\n\")\n",
        "            for key, value in self.stats.items():\n",
        "                f.write(f\"{key}: {value}\\n\")\n",
        "        print(f\"\\nReport saved as {report_file}\")\n",
        "\n",
        "# --- SETUP: Create the files with your data first ---\n",
        "with open(\"data.txt\", \"w\") as f:\n",
        "    f.write(\"45\\n60\\n78\\n90\\n55\")\n",
        "\n",
        "with open(\"categories.txt\", \"w\") as f:\n",
        "    f.write(\"Math\\nScience\\nEnglish\\nMath\\nHistory\")\n",
        "\n",
        "# --- EXECUTION: Create object and run ---\n",
        "analysis = DataSet(\"data.txt\", \"categories.txt\")\n",
        "\n",
        "if analysis.load_data():\n",
        "    analysis.calculate_statistics(threshold=60)\n",
        "    analysis.display_results()\n",
        "    analysis.save_report(\"report.txt\")"
      ]
    },
